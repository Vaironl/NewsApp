<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/articleImage"
        android:layout_width="@dimen/articleImageSize"
        android:layout_height="@dimen/articleImageSize"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/articleTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_margin="4dp"
        android:layout_toLeftOf="@id/articleImage"
        android:text="This is some article title"
        android:textColor="#000"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/articleAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/articleTitle"
        android:layout_margin="4dp"
        android:text="By: Vairon"
        android:textColor="@color/colorAccent"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/articleDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_toLeftOf="@id/articleImage"
        android:layout_below="@id/articleAuthor"
        android:layout_margin="4dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:padding="4dp"
        android:text="Lore Ipsum DOlor...."
        android:textColor="#161616"
        android:textSize="12dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="#000" />


</RelativeLayout>